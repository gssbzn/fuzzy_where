source 'https://rubygems.org'

gem 'activerecord', '~> 4.0.0', require: 'active_record'
gem 'rspec-rails', '~> 3.2.0'
gem 'generator_spec', '~>0.9.0'

platforms :ruby do
  if RUBY_VERSION > '2.1.0'
    gem 'sqlite3'
    gem 'test-unit'
  else
    gem 'sqlite3', '1.3.8'
  end
end

platforms :jruby do
  gem 'activerecord-jdbcsqlite3-adapter', '>= 1.3.0'
end

gemspec path: '../'
